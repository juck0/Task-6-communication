<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="8dp"
    >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter Text Here"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/fragmentContainerView"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
        app:layout_constraintBottom_toTopOf="@+id/button_send"
        />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fregment2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerView" />
    <TextView
        android:id="@+id/text_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Text Will Display Here"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/fregment2"
        app:layout_constraintBottom_toBottomOf="@id/fregment2"
        app:layout_constraintStart_toStartOf="@id/fregment2"
        app:layout_constraintEnd_toEndOf="@id/fregment2"
        />
    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
/>
</androidx.constraintlayout.widget.ConstraintLayout>